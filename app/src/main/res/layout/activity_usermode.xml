<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsermodeActivity">

    <TextView
        android:id="@+id/personalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="name"
        android:textAlignment="center"
        android:textColor="#7ADAD3"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/UserInt01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserInt01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/usermodeIntroduction01"
        android:textAlignment="center"
        android:textColor="#7ADAD3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personalName" />

    <ImageView
        android:id="@+id/personalPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserInt01"
        app:srcCompat="@drawable/ic_launcher_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>